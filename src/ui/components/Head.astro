---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<script>
  import { addEventListenerThemeButtons, preloadTheme } from "@/utils/theme";

  function init() {
    preloadTheme();
    addEventListenerThemeButtons();
  }

  // @see https://stackoverflow.com/questions/77278507/javascript-is-not-working-on-page-change-in-astro
  document.addEventListener("DOMContentLoaded", () => init());
  document.addEventListener("astro:after-swap", () => init());
</script>
